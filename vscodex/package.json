{
    "publisher": "vizualmodel",
    "name": "vmblu",
    "displayName": "vmblu",
    "description": "AI-native visual architecture modeling.",
    "version": "0.0.30",
    "private": true,
    "license": "Apache-2.0",
    "icon": "./assets/vmblu-logo-vscode.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/vizualmodel/vmblu.git",
        "directory": "vscodex"
    },
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Visualization",
        "AI",
        "Programming Languages"
    ],
    "keywords": [
        "vmblu",
        "architecture",
        "visual",
        "modeling",
        "ai",
        "graph",
        "blueprint",
        "system-design"
    ],
    "main": "./out/extension/vmblu-bundle.js",
    "contributes": {
        "commands": [
            {
                "command": "vmblu.globe",
                "title": "Globe test",
                "when": "extension == vmblu.vmblu",
                "icon": "$(globe)"
            }
        ],
        "customEditors": [
            {
                "viewType": "vmblu.vmblu",
                "displayName": "Vmblu",
                "selector": [
                    {
                        "filenamePattern": "*.blu"
                    }
                ],
                "priority": "default"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "command": "vmblu.globe",
                    "group": "navigation",
                    "when": "resourceExtname == .blu"
                }
            ]
        },
        "colors": [
            {
                "id": "vmblu.dataBadge",
                "defaults": {
                    "dark": "#5799fc",
                    "light": "#0b387c",
                    "highContrast": "#00ffff"
                },
                "description": "Accent used for Vmblu explorer badge."
            }
        ]
    },
    "files": [
        "README.md",
        "LICENSE.txt",
        "out/extension/vmblu-bundle.js",
        "out/extension/vmblu-bundle.js.map",
        "webview/webview-bundle.js",
        "webview/webview-bundle.js.map",
        "webview/webview-bundle.css",
        "webview/material-icons/iconfont/outlined.css",
        "webview/material-icons/iconfont/material-icons-outlined.woff2",
        "webview/material-icons/iconfont/material-icons-outlined.woff",
        "assets/vmblu-logo-vscode.png",
        "assets/vmblu-header.png",
        "assets/vmblu-screenshot.png"
    ],
    "scripts": {
        "vscode:prepublish": "npm run ext && npm run bundle",
        "vx": "npm run webview && npm run ext &&  npm run bundle && npm run vsix",
        "vsix": "vsce package --no-rewrite-relative-links",
        "publish:patch": "npm run webview && vsce publish patch",
        "webview": "cd ./webview && rollup -c",
        "ext": "tsc -p tsconfig.json",
        "bundle": "cd ./out/extension && rollup -c",
        "lint": "eslint \"extension/**/*.ts\"",
        "watch": "tsc -w -p ./",
        "help": "tsc -h",
        "vsix:publish": "vsce package"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^25.0.7",
        "@rollup/plugin-json": "^6.0.1",
        "@rollup/plugin-node-resolve": "^15.2.3",
        "@rollup/plugin-terser": "^0.4.4",
        "@types/node": "^16.18.34",
        "@types/vscode": "^1.73.0",
        "@typescript-eslint/eslint-plugin": "^6.7.0",
        "@typescript-eslint/parser": "^6.7.0",
        "eslint": "^8.26.0",
        "rollup": "^4.6.1",
        "rollup-plugin-css-only": "^4.5.2",
        "rollup-plugin-svelte": "^7.1.6",
        "svelte": "^5.0.0"
    },
    "dependencies": {
        "@vscode/vsce": "^3.7.1",
        "ts-morph": "^26.0.0",
        "typescript": "^5.8.3"
    },
    "activationEvents": [
        "onStartupFinished"
    ]
}
