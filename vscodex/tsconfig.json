    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2020"],
    "rootDir": "extension",
    "outDir": "out/extension",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["extension/**/*"],
  "exclude": ["node_modules", "srcmap", "webview"]
}
